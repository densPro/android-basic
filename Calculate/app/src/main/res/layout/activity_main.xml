<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@android:color/black">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:weightSum="4"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/textViewOperator"
            android:layout_weight="1"
            android:textColor="#f3c0c2b7"
            android:textSize="40dp"
            android:gravity="right" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:weightSum="2"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/textViewSecontOperating"
                android:layout_weight="1"
                android:textColor="#f3c0c2b7"
                android:textSize="45dp"
                android:gravity="right" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/textViewFirtsOperating"
                android:layout_weight="1"
                android:textColor="#f3c0c2b7"
                android:textSize="45dp"
                android:gravity="right" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="5">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:paddingBottom="5dp">


            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/btn_DEL"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#ffa4c639"
                android:text="DEL"
                android:typeface="monospace" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="AC"
                android:id="@+id/btn_AC"
                android:layout_weight="1"
                android:background="#ffa4c639"
                android:textSize="30dp"
                android:typeface="monospace" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="+/-"
                android:id="@+id/btn_plus_rest"
                android:layout_weight="1"
                android:background="#ffa4c639"
                android:textSize="30dp"
                android:typeface="monospace" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="/"
                android:id="@+id/btn_divide"
                android:layout_weight="1"
                android:background="#ffa4c639"
                android:textSize="30dp"
                android:typeface="monospace"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/btn_7"
                android:layout_weight="1"
                android:textSize="35dp"
                android:background="#ffa4c639"
                android:text="7"
                android:typeface="monospace" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="8"
                android:id="@+id/btn_8"
                android:layout_weight="1"
                android:background="#ffa4c639"
                android:textSize="35dp"
                android:typeface="monospace" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="9"
                android:id="@+id/btn_9"
                android:layout_weight="1"
                android:background="#ffa4c639"
                android:textSize="35dp"
                android:typeface="monospace" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="-"
                android:id="@+id/btn_rest"
                android:layout_weight="1"
                android:background="#ffa4c639"
                android:layout_marginLeft="5dp"
                android:textSize="35dp"
                android:typeface="monospace" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="4"
                android:id="@+id/btn_4"
                android:layout_weight="1"
                android:textSize="35dp"
                android:background="#ffa4c639"
                android:typeface="monospace" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="5"
                android:id="@+id/btn_5"
                android:layout_weight="1"
                android:background="#ffa4c639"
                android:textSize="35dp"
                android:typeface="monospace" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="6"
                android:id="@+id/btn_6"
                android:layout_weight="1"
                android:background="#ffa4c639"
                android:textSize="35dp"
                android:typeface="monospace" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="+"
                android:id="@+id/btn_plus"
                android:layout_weight="1"
                android:background="#ffa4c639"
                android:layout_marginLeft="5dp"
                android:textSize="35dp"
                android:typeface="monospace"
                android:elegantTextHeight="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:weightSum="4">
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="1"
                android:id="@+id/btn_1"
                android:layout_weight="1"
                android:textSize="35dp"
                android:background="#ffa4c639"
                android:typeface="monospace" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="2"
                android:id="@+id/btn_2"
                android:layout_weight="1"
                android:background="#ffa4c639"
                android:textSize="35dp"
                android:typeface="monospace" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="3"
                android:id="@+id/btn_3"
                android:layout_weight="1"
                android:background="#ffa4c639"
                android:textSize="35dp"
                android:typeface="monospace" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="x"
                android:id="@+id/btn_multiply"
                android:layout_weight="1"
                android:background="#ffa4c639"
                android:layout_marginLeft="5dp"
                android:textSize="35dp"
                android:typeface="monospace" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:weightSum="4">
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="00"
                android:id="@+id/btn_00"
                android:layout_weight="1"
                android:textSize="35dp"
                android:background="#ffa4c639"
                android:typeface="monospace" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="0"
                android:id="@+id/btn_0"
                android:layout_weight="1"
                android:background="#ffa4c639"
                android:textSize="35dp"
                android:typeface="monospace" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="."
                android:id="@+id/btn_point"
                android:layout_weight="1"
                android:background="#ffa4c639"
                android:textSize="35dp"
                android:typeface="monospace" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="="
                android:id="@+id/btn_equals"
                android:layout_weight="1"
                android:background="#ffa4c639"
                android:layout_marginLeft="5dp"
                android:textSize="35dp"
                android:typeface="monospace" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
